w4 4001e504 2 # NVIC: enable erase
w4 4001e50c 1 # NVIC: erase all flash, including UICR
#w4 4001e514 1
sleep 100
r
w4 r001e504 1 # NVIC: enable writing
loadbin $SOFTDEVICE_MAIN 0x0
loadbin $SOFTDEVICE_UICR 0x10001000
loadbin $BIN 0x14000
loadbin $BUILD_DIR/bootloader+$2.bin 0x36000
loadbin $BUILD_DIR/$1+$2.sha1 0x3f800
w4 10001014 0x00600300  # boot from 0x36000
r
q
